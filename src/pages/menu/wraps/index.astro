---
// Component imports
import Layout from '../../../layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
// Data import
import wrapsData from './wrapsData.json'
import MenuNavbar from '../../../components/MenuNavbar.astro'
---

<Layout
	title="Wraps"
	description="Explora nuestro menÃº y descubre nuestros deliciosos wraps artesanales."
>
	<!-- <MenuNavbar /> -->
	<MenuNavbar />
	<main class="pb-24 pt-32">
		<header
			class="flex flex-col justify-between gap-8 px-page-mobile sm:flex-row sm:items-center md:px-page-tablet lg:px-page"
		>
			<!-- Section title -->
			<div class="flex items-center gap-4">
				<h1 class="text-6xl md:text-8xl">Wraps</h1>
				<Icon name={'food/big-wrap'} size={96} />
			</div>
			<!-- Icon explanations -->
			<ul class="flex flex-col gap-4">
				<li class="flex items-center gap-2">
					<Icon name={'food/flame'} size={24} /><p>Producto Picante</p>
				</li>
				<li class="flex items-center gap-2">
					<Icon name={'food/sun'} size={24} /><p>Ideal para Desayunar</p>
				</li>
			</ul>
		</header>
		<section class="px-page-mobile py-12 md:px-page-tablet lg:px-page">
			<div class="grid gap-6 md:grid-cols-2">
				<!-- Maps the items from the data object -->
				{
					Object.keys(wrapsData).map((wrap) => {
						return (
							<div class="flex flex-col items-center justify-center gap-3 sm:flex-row">
								<img
									src={wrapsData[wrap].image.src}
									alt={wrapsData[wrap].image.alt}
									class="w-full rounded-lg sm:w-48"
								/>
								<div class="flex flex-col gap-2">
									<div class="flex items-center justify-between">
										<div class="flex items-center gap-2">
											<h3 class="text-2xl font-semibold lg:text-3xl">{wrapsData[wrap].name}</h3>
											{wrapsData[wrap].spicy && <Icon name={'food/flame'} size={24} />}
											{wrapsData[wrap].morning && <Icon name={'food/sun'} size={24} />}
										</div>
										<h4 class="text-xl font-semibold lg:text-3xl">${wrapsData[wrap].price}</h4>
									</div>
									<p class="text-md font-light lg:text-lg">{wrapsData[wrap].description}</p>
								</div>
							</div>
						)
					})
				}
			</div>
		</section>
	</main>
</Layout>
