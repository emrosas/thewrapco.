---
// Component imports
import Layout from '../../../layouts/Layout.astro'
import Image from 'astro/components/Image.astro'
// Icon imports
import flame from '../../../assets/wraps/flame.svg'
import sun from '../../../assets/wraps/sun.svg'
import wrap from '../../../assets/wraps/wrap.svg'
// Data import
import wrapsData from './_wrapsData.json'
import MenuNavbar from '../MenuNavbar.astro'
---

<Layout title="Wraps">
	<MenuNavbar />
	<main class="pb-24 pt-32">
		<header
			class="flex flex-col justify-between gap-8 px-page-mobile sm:flex-row sm:items-center md:px-page-tablet lg:px-page"
		>
			<!-- Section title -->
			<div class="flex items-center gap-4">
				<h1 class="text-6xl md:text-8xl">Wraps</h1>
				<Image src={wrap} alt="Wrap Icon" class={'w-12 md:w-20'} />
			</div>
			<!-- Icon explanations -->
			<ul class="flex flex-col gap-4">
				<li class="flex items-center gap-2">
					<Image src={sun} alt="Sun Icon" /><p>Producto Picante</p>
				</li>
				<li class="flex items-center gap-2">
					<Image src={flame} alt="Flame Icon" /><p>Ideal para Desayunar</p>
				</li>
			</ul>
		</header>
		<section class="grid gap-12 px-page-mobile py-12 md:grid-cols-2 md:px-page-tablet lg:px-page">
			<!-- Maps the items from the data object -->
			{
				Object.keys(wrapsData).map((wrap) => {
					return (
						<div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
							<img
								src={wrapsData[wrap].image.src}
								alt={wrapsData[wrap].image.alt}
								class="w-full rounded-lg sm:w-48"
							/>
							<div class="flex flex-col gap-2">
								<div class="flex items-center justify-between">
									<div class="flex gap-2">
										<h3 class="text-2xl font-semibold lg:text-3xl">{wrapsData[wrap].name}</h3>
										{wrapsData[wrap].spicy && <Image src={flame} alt="Flame Icon" />}
										{wrapsData[wrap].morning && <Image src={sun} alt="Sun Icon" />}
									</div>
									<h4 class="text-xl font-semibold lg:text-3xl">${wrapsData[wrap].price}</h4>
								</div>
								<p class="text-md font-light lg:text-lg">{wrapsData[wrap].description}</p>
							</div>
						</div>
					)
				})
			}
		</section>
	</main>
</Layout>
