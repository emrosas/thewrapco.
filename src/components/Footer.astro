---
const currentYear = new Date().getFullYear()
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import Navlinks from './Navlinks.astro'
import footerLogo from '../assets/navbar/footer-logo.svg'
import bgWrap from '../assets/navbar/bg-wrap.svg'
---

<footer
	id="contacto"
	class="relative overflow-clip rounded-t-[3rem] bg-dark-2 px-page-mobile py-24 text-light-1 md:px-page-tablet md:py-12 lg:px-page"
>
	<div class="absolute inset-0 z-0 flex items-center justify-center opacity-[2%]">
		<Image
			src={bgWrap}
			alt={'A wrap icon as a detail in the bg'}
			class="max-w-[200%] sm:max-w-full"
		/>
	</div>
	<div class="relative z-20 grid gap-16 sm:grid-cols-6 sm:gap-0">
		<Image class="h-full sm:col-span-2" src={footerLogo} alt="Brand Logo" />
		<div class="flex flex-col items-end justify-between gap-16 sm:col-span-4">
			<div class="flex flex-col items-start justify-between gap-12 md:flex-row md:gap-32">
				<ul class="flex flex-col gap-4">
					<li><Navlinks href="/" text="Inicio" /></li>
					<li><Navlinks href="/menu/wraps/" text="Menú" /></li>
					<li><Navlinks href="#contacto" text="Contacto" /></li>
				</ul>
				<ul class="class= flex flex-col gap-4 font-light">
					<li>
						<Navlinks
							href="/contacto/"
							text="Rio Mississippi 129 A, Del Valle, 66220 San Pedro Garza García, N.L."
							icon="info/map"
						/>
					</li>
					<li><Navlinks href="/contacto/" text="contacto@thewrap.co" icon="info/mail" /></li>
					<li><Navlinks href="/contacto/" text="proveedores@thewrap.co" icon="info/mail" /></li>
					<li><Navlinks href="/contacto/" text="81 144 9988" icon="info/phone" /></li>
				</ul>
				<ul class="flex items-center justify-end gap-3 lg:gap-6">
					<li
						class="rounded-full border-2 border-brand-2 border-opacity-0 p-1 hover:border-opacity-100"
					>
						<a
							href="/"
							class="flex items-center justify-center rounded-full bg-light-1 p-1 opacity-80 hover:opacity-100"
							><Icon name={'socials/instagram'} /></a
						>
					</li>
					<li
						class="rounded-full border-2 border-brand-2 border-opacity-0 p-1 hover:border-opacity-100"
					>
						<a
							href="/"
							class="flex items-center justify-center rounded-full bg-light-1 p-1 opacity-80 hover:opacity-100"
							><Icon name={'socials/facebook'} /></a
						>
					</li>
					<li
						class="rounded-full border-2 border-brand-2 border-opacity-0 p-1 hover:border-opacity-100"
					>
						<a
							href="/"
							class="flex items-center justify-center rounded-full bg-light-1 p-1 opacity-80 hover:opacity-100"
							><Icon name={'socials/tiktok'} /></a
						>
					</li>
				</ul>
			</div>
			<p class="opacity-50">
				&copy;{currentYear} The Wrap Co. & Coffee. Todos los Derechos Reservados. Sitio por Name Not
				Found
			</p>
		</div>
	</div>
</footer>

<style>
	.main-link:hover svg {
		tranform: translateY(-2px);
		transition: transform 0.3s cubic-bezier(0.23, 1, 0.32, 1);
	}
</style>
